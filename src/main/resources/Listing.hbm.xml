<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="tanton.homehunter.domain.hibernate.Listing" table="rental_properties">
        <meta attribute="class-description">
            This class contains the property detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="listingId" column="listing_id" type="string"/>
        <property name="numBedrooms" column="num_bedrooms" type="string"/>
        <property name="listingStatus" column="listing_status" type="string"/>
        <property name="propertyType" column="property_type" type="string"/>
        <property name="thumbnailUrl" column="thumbnail_url" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="detailsUrl" column="details_url" type="string"/>
        <property name="price" column="price" type="string"/>
        <property name="status" column="status" type="string"/>
        <property name="agentName" column="agent_name" type="string"/>
        <property name="displayableAddress" column="displayable_address" type="string"/>
        <property name="firstPublishedDate" column="first_published_date" type="timestamp"/>
        <property name="lastPublishedDate" column="last_published_date" type="timestamp"/>
    </class>
</hibernate-mapping>
